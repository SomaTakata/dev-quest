datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String    @id @default(cuid())
  projects  Project[]
}

model Project {
  id          String    @id @default(cuid())
  userId      String
  companyName String
  deadline    DateTime
  createdAt   DateTime  @default(now())
  user        User      @relation(fields: [userId], references: [id])
  questions   Question[]
}

model Question {
  id        String    @id @default(cuid())
  projectId String
  content   String
  answers   Answer[]
  project   Project   @relation(fields: [projectId], references: [id])
}

model Answer {
  id         String    @id @default(cuid())
  questionId String
  content    String
  question   Question  @relation(fields: [questionId], references: [id])
}
